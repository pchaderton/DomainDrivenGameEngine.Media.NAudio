<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>DomainDrivenGameEngine.Media.NAudio</PackageId>
    <Description>An NAudio-based implementation of interfaces defined in DomainDrivenGameEngine.Media for sourcing audio files.</Description>
    <Version>0.2.1</Version>
    <Authors>Preston Chaderton</Authors>
    <Company>Preston Chaderton</Company>
    <RepositoryUrl>https://github.com/pchaderton/DomainDrivenGameEngine.Media.NAudio</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DomainDrivenGameEngine.Media" Version="0.2.1" />
    <PackageReference Include="DomainDrivenGameEngine.RuleSet" Version="0.1.2">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="NAudio" Version="1.10.0" />
  </ItemGroup>

</Project>
